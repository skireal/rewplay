# Example configuration for UK-only tracking
# Copy this to .env and fill in your credentials

# eBay API credentials
EBAY_APP_ID=your_app_id_here
EBAY_CERT_ID=your_cert_id_here

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Search keywords
SEARCH_KEYWORDS=joy division cassette,new order tape

# eBay settings - IMPORTANT FOR UK!
EBAY_SITE_ID=EBAY_UK

# Location filters - UK ONLY
LOCATED_IN=GB
SHIPS_TO=GB

# Maximum results per search
MAX_RESULTS=50

# Price filters (optional, in GBP)
MIN_PRICE=
MAX_PRICE=

# Item condition filter (optional)
CONDITION_FILTER=
